<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeScaler" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="ProcessListView" Grid.Row="0" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="PID" Width="60"/>
                    <GridViewColumn Header="Process Name" Width="200"/>
                    <GridViewColumn Header="Architecture" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Time Multiplier:" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="TimeMultiplierSlider" 
                        Minimum="0.1" Maximum="10.0" 
                        Value="1.0" 
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"/>
                <TextBox x:Name="TimeMultiplierTextBox" 
                         Grid.Column="1" 
                         Width="50" 
                         Margin="10,0,0,0"
                         Text="{Binding ElementName=TimeMultiplierSlider, Path=Value, StringFormat={}{0:F1}}"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <CheckBox x:Name="ManualMappingCheckBox" 
                      Content="Use Manual Mapping" 
                      Margin="0,0,0,10"/>
            <TextBlock Text="Hotkeys:" Margin="0,0,0,5"/>
            <TextBlock Text="Ctrl + F1: Toggle Time Scaling" Margin="0,0,0,2"/>
            <TextBlock Text="Ctrl + F2: Reset Time Multiplier" Margin="0,0,0,2"/>
        </StackPanel>
    </Grid>
</Window> 